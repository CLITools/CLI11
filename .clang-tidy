# Checks that will be implemented in future PRs:
# google-explicit-constructor, hints to 4 issues
# google-runtime-int, hints to 4 issues
# google-runtime-references, hints to ~30 issues
# performance-unnecessary-value-param, hints to ~110 issues

FormatStyle: file

Checks: '
-*,
google-build-explicit-make-pair,
google-build-namespaces,
google-build-using-namespaces,
google-default-arguments,
google-global-names-in-headers,
google-readability-casting,
google-readability-casting,
google-readability-todo,
google-runtime-operator,
google-upgrade-googletest-case,
llvm-include-order,
llvm-namespace-comment,
misc-throw-by-value-catch-by-reference,
modernize*,
readability-container-size-empty,
'

WarningsAsErrors: '
-*,
google-build-explicit-make-pair,
google-build-namespaces,
google-build-using-namespaces,
google-default-arguments,
google-global-names-in-headers,
google-readability-casting,
google-readability-casting,
google-readability-todo,
google-runtime-operator,
google-upgrade-googletest-case,
llvm-include-order,
llvm-namespace-comment,
misc-throw-by-value-catch-by-reference,
modernize*,
readability-container-size-empty,
'

HeaderFilterRegex: '.*hpp'

CheckOptions:
- key:             readability-braces-around-statements.ShortStatementLines
  value:           '1'

